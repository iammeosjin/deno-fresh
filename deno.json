{
	"tasks": {
		"dev": "deno run -A --watch=static/css/,static/images/,static/js/,static/js/,static/res/,routes/ dev.ts",
		"start": "deno run -A main.ts"
	},
	"importMap": "./import_map.json",
	"fmt": {
		"files": {
			"include": ["./"],
			"exclude": ["static/"]
		},
		"options": {
			"useTabs": true,
			"lineWidth": 80,
			"indentWidth": 4,
			"singleQuote": true,
			"proseWrap": "always"
		}
	},
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "preact"
	}
}
